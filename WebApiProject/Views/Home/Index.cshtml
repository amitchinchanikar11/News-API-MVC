<h2>All News</h2>

<table id="newsTable" class="table table-bordered table-hover">
    <thead>
        <tr>
            <th>Title</th>
            <th>Section</th>
            <th>Subsection</th>
            <th>Url</th>
            <th>Updated date</th>
        </tr>
    </thead>
    <tbody></tbody>
</table>

@section scripts
{
    <script>
        $(document).ready(function () {
            var table = $("#newsTable").DataTable({
               
                ajax: {
                    url: "/api/news",
                    dataSrc: ""
                },

                columns: [
                    {
                        data: "title",
                    },
                    {
                        data: "section"
                    },
                    {
                        data: "subsection"
                    },
                    {
                        data: "url"
                    },
                    {
                        data: "updated_date"
                    }
                ]
            });
        });
    </script>
}